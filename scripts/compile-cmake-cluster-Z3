# --- Compiler
export CC=/software/chimica2/tools/gcc/gcc-9.2.0/bin/gcc
export CXX=/software/chimica2/tools/gcc/gcc-9.2.0/bin/g++

# --- Prefix
export CUSTOM_INSTALL=/home/chimica2/tdinelli/GitHub/OptiSMOKE_toolbox/test

# --- External libraries of OptiSMOKEpp
export Dakota_ROOT=/home/chimica2/tdinelli/NumericalLibraries/dakota/dakota-6.17.0-gcc-9.2.0
export Boost_ROOT=/software/chimica2/libraries/boost/boost-1.78.0-gcc-9.2.0
export NLopt_DIR=/home/chimica2/tdinelli/NumericalLibraries/nlopt/nlopt-2.7.1-gcc-9.2/lib64/cmake/nlopt

# --- Libraries needed by OpenSMOKEpp
export OpenSMOKEpp_ROOT=/home/chimica2/tdinelli/GitHub/OpenSMOKEpp
export Eigen3_ROOT=/software/chimica2/libraries/eigen/eigen-3.4.0
export CEQ_ROOT=/home/chimica2/tdinelli/NumericalLibraries/CEQ/lib/linux
export OpenBLAS_HOME=/home/chimica2/tdinelli/NumericalLibraries/openblas/openblas-0.3.21-gcc-9.2.0
export OpenSMOKEppSOLVERS_ROOT=/home/chimica2/tdinelli/GitHub/OpenSMOKEppSolvers

cd ..
mkdir build
cd build
cmake \
	-DCMAKE_INSTALL_PREFIX=$CUSTOM_INSTALL \
	-DOPTISMOKE_USE_OPENBLAS=1 \
	-DOPTISMOKE_USE_NLOPT=1 \
	..
make
