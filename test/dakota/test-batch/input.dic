Dictionary OptiSMOKEpp
{
	@KineticsPreProcessor	KINPREPRO;

	@OutputFolder	Output/optimized-kinetics;

	@ListOfExperimentalDataFiles	ds_data/wang_exp_dataset_1.json 
									ds_data/wang_exp_dataset_2.json 
									ds_data/wang_exp_dataset_3.json 
									ds_data/wang_exp_dataset_4.json 
									ds_data/wang_exp_dataset_5.json 
									ds_data/wang_exp_dataset_6.json;

	@OptimizationSetup				OptimizationSetup;

	@OptimizationTarget				OptimizationTargets;
        
	@DakotaOptions					dakota_options;
    
	@CurveMatchingOptions			curve_matching_options;

	@OptimizationLibrary			dakota;

}

Dictionary OptimizationSetup
{
	@ParametersBoundaries			Narrow;

	@ObjectiveFunctionType			CurveMatching;
    
	@Parameters_Distribution		uniform;
        
	@AcceptedSigmaInKDistribution	3;
        
	@SigmaExpDistribution			3;

	@PenaltyFunction				true;
}

Dictionary OptimizationTargets
{
	@NumberOfBatchReactor				6;

	@NumberOfPlugFlowReactor			0;
        
	@NumberOfPerfectlyStirredReactor	0;
        
	@NumberOfPremixedLaminarFlame		0;

	@ListOfTarget_lnA					5	21	23	27	34;

	@ListOfTarget_Beta					5	21	23	27	34;
        
	@ListOfTarget_E_over_R				5	21	23	27	34;

	@ListOfTargetUncertaintyFactors		5	21	23	27	34;
        
	@ListOfUncertaintyFactors			0.2	0.3	0.3	0.15	0.3;

	@ListOfTarget_ThirdBody_Reactions	21	34;
                
	@ListOfTarget_ThirdBody_Species		H2O	H2O;
                
	@ListOfMaxAbs_ThirdBody_Eff			22	22;
                
	@ListOfMinAbs_ThirdBody_Eff			1	6;
}

Dictionary KINPREPRO
{
	@Kinetics				../../mechanisms/Aramco_2.0/Kinetics.CKI;

	@Thermodynamics			../../mechanisms/Aramco_2.0/TH.CKT;
        
	@Transport				../../mechanisms/Aramco_2.0/TRAN.TRC;

	@Output					Output/kinetics;
}

Dictionary dakota_options
{
	@EchoDakotaInput			true;
	@TabularDataFile			Output/tabular_data.dat;

	@Method						coliny_ea;

	@FitnessType				linear_rank;

	@CrossoverType				uniform;
	@CrossoverRate				0.65;

	@MutationType				offset_normal;
	@MutationRate				0.5;

	@ReplacementType			chc=50 ;

	@MaxIterations				1000;
	@MaxFunctionEvaluations		10000;
	@ConvergenceTolerance		1e-8;
	@SolutionTarget				1e-6;

	@Seed						1000;
	@PopulationSize				100;
}

Dictionary curve_matching_options
{
	@NumberOfBootstrapVariations				1;
	@UseBootStrap								false;
}
